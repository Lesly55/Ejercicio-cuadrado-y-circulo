//radio ID modficable
//circunferencia
//area

public class Circulo {
	public int radio;
	public int newRadio;
	
	public Circulo() {
		radio = 177953;
	}
	
	public int cambiarRadio(int newRadio) {
		radio = newRadio;
		return radio;
		
	}
	
	public double calcularCircunferencia() {
		return 2 * Math.PI * radio;
	}
	
	public double calcularAreaCirculo() {
		return (Math.PI * Math.pow(radio, 2));
		
	}

}

